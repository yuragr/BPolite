<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="settings_header_style">
        <item name="android:textColor">@android:color/primary_text_light_nodisable</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="settings_item_style">
        <item name="android:textColor">@android:color/primary_text_light_nodisable</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingTop">3dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="settings_subitem_style">
        <item name="android:textColor">@android:color/primary_text_light_nodisable</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingTop">1dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:textSize">14sp</item>
    </style>
    
    <color name="ButtonBackground">#84D2EF</color> 
</resources>